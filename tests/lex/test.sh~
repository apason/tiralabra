#!/bin/bash

cd "$dirname "$0")"

bin="../../target/tira"

red='\033[0;31m'
green='\033[0;32m'
NC='\033[0m'

echo " "
echo "TESTING LEXICAL ANALYZER"

for test in $(cat test.cfg | cut -f1 -d' '); do
    echo "testing $test..."
    
    expected=$(cat test.cfg | grep test | rev | cut -f1 -d' ');
    actual=$($bin test | cut -f2 | sed ':a;N;$!ba;s/\n//g');
    
    echo $actual


done
	      
